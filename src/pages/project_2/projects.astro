---
import Layout from '../../layouts/Layout.astro';
// import Navigation from '../../components/Navigation.astro';
import ContactForm from '../../components/ContactForm.astro';
import Navigation from '../../components/Navigation.astro';
import '../../styles/global.css';

import {getCollection} from 'astro:content';
const my_projects = await getCollection('my_projects');
console.log(my_projects);
// my_projects[0].title;





---

<Layout title="Dev my_projects, libros para programadores">
	<Navigation />
    <main>
		
		<div class="container hero">

    
			<div class="content">
                <h1 class="text-center text-7xl font-extrabold mb-24">My
                    <span class="block">Projects</span>
                </h1>
				<p>Building Innovative Solutions: High-Impact Projects by a Skilled Programmer in Database Engineering and Development</p>
				<div class="social-links">
					<a href="https://www.linkedin.com/in/inigo-arriazu-garcia" aria-label="LinkedIn"><img src="/linkedin-icon.svg" alt="LinkedIn" /></a>
					<a href="https://www.instagram.com/iarriazu/" aria-label="Instagram"><img src="/instagram-icon.svg" alt="Instagram" /></a>
					<!-- <a href="https://www.youtube.com/@I%C3%B1igoArriazu" aria-label="YouTube"><img src="/youtube-icon.svg" alt="YouTube" /></a>    --> 
					<a href="https://github.com/Datawithinigo" aria-label="GitHub"><img src="/github-icon.svg" alt="GitHub" /></a>    
				</div>
			</div>
 
		</div>



	<section aria-label="Libros recomendados para programadores">
		<div class="px-4 mx-auto max-w-screen-xl">
			<div class="grid gap-6 md:grid-cols-3">
				{
					my_projects.map(my_projects => {
						const { slug, data } = my_projects
						const { title, author, img, readtime, description, buy } = data

						return (
							<article class="flex">
								<a href={`/libro/${slug}`} class="mb-2 ml-2 xl:mb-0 transition hover:scale-110">
                                {/* slug es el elemento que te permite generar la anmiacion: pagina principal y pagina hija -> identificador por nombre unico */}
									<img
										transition:name={`img-${slug}`}
										class="mr-5 w-48 rounded"
										src={`/${img}`}
										alt={title}
									/>
								</a>
								
								<div class="flex flex-col justify-center">
									<h2 transition:name={`title-${slug}`} class="mb-2 ml-2 text-2xl font-bold leading-tight text-gray">
										{title}
									</h2>

									<p class="mb-4 text-blue-800 max-w-sm">{description}</p>
									<span class="text-xs">‚è≥ Lectura en {readtime} minutos</span>
								</div>
							</article>
						)
					})
				}
			</div>
		</div>
	</section>
</Layout>

<style>
	main {
		display: flex;
		flex-direction: column;
		align-items: center;
		padding: 2rem;
	}
     .content {
        flex: 1;
        /* display: flex; */
        text-align: center;
        padding: 2rem;
        border-radius: 12px;
        /* background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));  */
        /* border: 1px solid rgba(var(--accent-light), 25%);*/
    } *
 

    /*  IMAGE CONTAINER 2 */
    h1 {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1;
        text-align: center;
        margin-bottom: 1em;
        /* background-image: var(--accent-gradient); 
        -webkit-background-clip: text; 
        -webkit-text-fill-color: transparent; */
        background-size: 400%;
        background-position: 0%;
    }
 
    /* END IMAGE CONTAINER: space for include elements */
    .back-link {
        margin-top: 3rem;
    }

    .back-link {
		border: none;
		padding: 0.8rem 1.5rem;
		font-size: 1rem;
		font-weight: 700;
		cursor: pointer;
		transition: background-color 0.3s ease;
        border-radius: 4px; /* Step added to round the corners */
	}
	.back-link:hover {
        color: var(--light-red_hover);
		/* background-color: var(--light-red_hover); */
	}
    /* elements required to style the social links */
    .social-links {
        display: flex;
        gap: 10px; /* Adjust the spacing between icons */
    }
    .social-links img {
        width: 20px; /* Adjust size as needed */
        height: 20px;
    }
	@media (max-width: 68px) {
		.hero, .work-process {
			flex-direction: column-reverse;
		}
		.content {
			padding-right: 0;
			text-align: center;
		}
        .social-links {
            display: flex;
            gap: 1px; /* Adjust the spacing between icons */
        }

        .social-links img {
            width: 2px; /* Adjust size as needed */
            height: 2px;
        }
		.image-container {
			margin-bottom: 2rem;
		}
		.service-cards {
			flex-direction: column;
		}
	}

</style>